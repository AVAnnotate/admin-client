{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Projects",
  "definitions": {
    "Projects": {
      "type": "object",
      "properties": {
        "projects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Project"
          }
        }
      },
      "required": [
        "projects"
      ],
      "additionalProperties": false
    },
    "Project": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mediaPlayer": {
          "type": "string",
          "enum": [
            "universal",
            "aviary"
          ]
        },
        "autoPopulateHomePage": {
          "type": "boolean"
        },
        "users": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "description",
        "language",
        "slug",
        "authors",
        "mediaPlayer",
        "autoPopulateHomePage",
        "users"
      ],
      "additionalProperties": false
    }
  }
}